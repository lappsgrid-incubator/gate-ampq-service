<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="false">
	<!-- <property name="log.dir" value="."/> -->
	<property name="pattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%logger{36}:%line] %msg%n"/>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>${pattern}</pattern>
		</encoder>
	</appender>
	
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${log.dir:-.}/ampq-service.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${log.dir:-.}/${log.file:-ampq-service}-%d{yyyy-MM-dd}-%i.log</fileNamePattern>
			<maxFileSize>10MB</maxFileSize>
			<totalSizeCap>2GB</totalSizeCap>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>${pattern}</pattern>
		</encoder>
		<append>true</append>
	</appender>

	<logger name="gate.creole.CreoleRegisterImpl" level="error"/>
	<logger name="org.lappsgrid" level="warn"/>
	<logger name="org.lappsgrid.gate" level="info"/>
	<logger name="org.lappsgrid.gate.ampq" level="debug"/>
	<logger name="org.lappsgrid.gate.ampq.service.Worker" level="trace"/>
	<!--
	<logger name="org.lappsgrid" level="warn" additivity="false">
		<appender-ref ref="STDOUT"/>
		<appender-ref ref="FILE"/>
	</logger>
	
	<logger name ="org.lappsgrid.gate" level="info" additivity="false">
		<appender-ref ref="STDOUT"/>
		<appender-ref ref="FILE"/>
	</logger>

	<logger name="org.lappsgrid.gate.ampq" level="debug" additivity="false">
		<appender-ref ref="STDOUT"/>
		<appender-ref ref="FILE"/>
	</logger>
	-->
	<root level="warn">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE"/>
	</root>
</configuration>
